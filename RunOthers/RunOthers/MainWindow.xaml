<Window x:Class="RunOthers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunOthers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Name="Start" Background="Green" Grid.Column="0" HorizontalAlignment="Center" IsEnabled="True" VerticalAlignment="Center" Padding="3" Margin="5" Click="startHello">Start</Button>
        <Button Name="Stop" Background="Red" Grid.Column="1" HorizontalAlignment="Center"  IsEnabled="False" VerticalAlignment="Center" Padding="3" Margin="5" Click="stopHello">Stop</Button>
    </Grid>
</Window>
